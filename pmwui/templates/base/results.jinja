{% extends 'base.jinja' %}

{% block header %}
<h1>{% block title %}Results{% endblock %}</h1>
{% endblock %}

{% block content %}

<div id="main-body">

    <div>
        Status: {{ status }} | Queue length: {{ qcount }}<br>
        <!--        Reference: Glycine max var. Williams 82 <br>-->
    </div>

    <hr>

    {% if status.endswith('DONE') %}
    <h3>Download Data</h3>
    <a href="/results/{{ job_id }}/exons_genes_and_contigs.fa">Mask</a>
    <br>
    <a href="/results/{{ job_id }}/primers.csv">Primers</a>

    <hr>
    <div>
        <h3>Markers file</h3>
        <div>

            <div id="input_grid" style="width: 100%; height: 500px"></div>

        </div>

        <hr>
        <h3>Ignored lines</h3>
        <div>
        </div>
    </div>

    <div id="alignment_mask" style="max-width: 100%; overflow-x: scroll">

    </div>
    {% else %}
    <h3>Generating...</h3>

    <script type="text/javascript" defer="defer">
        setTimeout(function () {
            window.location.reload();
        }, 5000);
    </script>
    {% endif %}
</div>

{% endblock %}